<Page
    x:Class="AstroOdyssey.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AstroOdyssey">

    <Grid x:Name="RootGrid" Background="Black">

        <Canvas
            x:Name="GameCanvas"
            Background="Transparent"
            PointerPressed="GameCanvas_PointerPressed" />

        <TextBlock
            Name="ScoreText"
            Margin="5"
            HorizontalAlignment="Left"
            FontFamily="Consolas"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Score:" />

        <TextBlock
            Name="HealthText"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontFamily="Consolas"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Health:" />

        <TextBlock
            Name="FPSText"
            Margin="5"
            HorizontalAlignment="Right"
            FontFamily="Consolas"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="FPS:" />

        <TextBlock
            Name="ObjectsText"
            Margin="5,50,5,5"
            HorizontalAlignment="Right"
            FontFamily="Consolas"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Objects:" />

    </Grid>
</Page>
