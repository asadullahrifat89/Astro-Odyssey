<Page
    x:Class="AstroOdyssey.GameStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AstroOdyssey">
    <Grid>
        <Button
            x:Name="PlayButton"
            Width="300"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="White"
            BorderThickness="5"
            Click="PlayButton_Click"
            Content="Play"
            FontFamily="Consolas"
            Foreground="White"
            Style="{StaticResource MaterialDesign_GlassButton_Style}" />
    </Grid>
</Page>
