<Page
    x:Class="AstroOdyssey.GameStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AstroOdyssey">

    <Grid>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Consolas"
                FontSize="70"
                FontWeight="Bold"
                Foreground="White"
                Text="ASTRO ODYSSEY" />
            <Button
                x:Name="PlayButton"
                Width="300"
                Height="100"
                Margin="0,100,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="White"
                BorderThickness="5"
                Click="PlayButton_Click"
                Content="START GAME"
                FontFamily="Consolas"
                FontSize="30"
                Style="{StaticResource MaterialDesign_RoundButton_Style}" />
        </StackPanel>

    </Grid>
</Page>
