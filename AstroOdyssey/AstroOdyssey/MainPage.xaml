<Page
    x:Class="AstroOdyssey.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AstroOdyssey"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Background="Black">

        <Canvas
            x:Name="GameCanvas"
            Background="Transparent"
            PointerMoved="GameCanvas_PointerMoved" />

        <TextBlock
            Name="ScoreText"
            HorizontalAlignment="Left"
            FontFamily="Consolas"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Score: 0" />

        <TextBlock
            Name="DamageText"
            HorizontalAlignment="Right"
            FontFamily="Consolas"
            FontSize="18"
            FontWeight="Bold"
            Foreground="White"
            Text="Health: 100" />

        <Button
            x:Name="PlayButton"
            Width="300"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="PlayButton_Click"
            Content="Play"
            FontFamily="Consolas"
            Foreground="White"
            Style="{StaticResource MaterialDesign_GlassButton_Style}" />

    </Grid>

</Page>
